generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Payment {
  id Int @id @default(autoincrement())
  email String @unique
  amount Float
  status String @db.VarChar(16)
}